    <!-- ConfiguraciÃ³n global del token CSRF -->
     <script>
         $(document).ready(function() {
             var token = $('input[name="__RequestVerificationToken"]').val();
             if (token) {
                 // Configurar el token para jQuery AJAX
                 $.ajaxSetup({
                     beforeSend: function(xhr) {
                         xhr.setRequestHeader('RequestVerificationToken', token);
                     }
                 });
                 
                 // TambiÃ©n disponible como variable global
                 window.csrfToken = token;
             }
         });
     </script>
     
     <!-- Layout Enhancement Script -->
     <script>
         $(document).ready(function() {
             // Auto-hide sidebar on mobile after navigation
             $('.nav-link').on('click', function() {
                 if ($(window).width() < 992) {
                     // Trigger Alpine.js to hide sidebar
                     window.Alpine && window.Alpine.store && window.Alpine.store('sidebar', { open: false });
                 }
             });

             // Smooth scrolling for anchor links
             $('a[href^="#"]').on('click', function(e) {
                 e.preventDefault();
                 const target = $($(this).attr('href'));
                 if (target.length) {
                     $('html, body').animate({
                         scrollTop: target.offset().top - 100
                     }, 500);
                 }
             });

             // Add loading states to buttons (except logout)
             $('button[type="submit"]').on('click', function() {
                 const $btn = $(this);
                 if (!$btn.hasClass('btn-no-loading') && !$btn.hasClass('btn-logout')) {
                     $btn.prop('disabled', true);
                     const originalText = $btn.html();
                     $btn.html('<span class="spinner-border spinner-border-sm me-2"></span>Procesando...');
                     
                     setTimeout(() => {
                         $btn.prop('disabled', false).html(originalText);
                     }, 2000);
                 }
             });

             // Handle logout button specifically
             $('.btn-logout').on('click', function(e) {
                 const $btn = $(this);
                 if ($btn.is('button[type="submit"]')) {
                     $btn.prop('disabled', true);
                     const originalHtml = $btn.html();
                     $btn.html('<span class="spinner-border spinner-border-sm me-2"></span>Cerrando sesiÃ³n...');
                     
                     // Let the form submit naturally
                     setTimeout(() => {
                         $btn.closest('form')[0].submit();
                     }, 100);
                 }
             });

             // Enhanced tooltips
             const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
             tooltipTriggerList.map(function (tooltipTriggerEl) {
                 return new bootstrap.Tooltip(tooltipTriggerEl);
             });

             // Add active class management
             function setActiveNavItem() {
                 const currentPath = window.location.pathname;
                 $('.nav-link').removeClass('active');
                 $('.nav-link[href="' + currentPath + '"]').addClass('active');
             }
             
             setActiveNavItem();

             // Keyboard navigation
             $(document).keydown(function(e) {
                 // Alt + M to toggle sidebar
                 if (e.altKey && e.keyCode === 77) {
                     e.preventDefault();
                     const sidebarButton = $('.sidebar-toggle');
                     if (sidebarButton.length) {
                         sidebarButton.click();
                     }
                 }
             });
         });

         // Global error handler
         window.addEventListener('unhandledrejection', function(e) {
             console.error('Unhandled promise rejection:', e.reason);
             Swal.fire({
                 icon: 'error',
                 title: 'Error inesperado',
                 text: 'Ha ocurrido un error inesperado. Por favor, recarga la pÃ¡gina.',
                 confirmButtonText: 'Recargar',
                 allowOutsideClick: false
             }).then(() => {
                 window.location.reload();
             });
         });
     </script>
     
     <!-- Sistema de autenticaciÃ³n -->
     <script src="~/js/auth.js" asp-append-version="true"></script>
     
     @await RenderSectionAsync("Scripts", required: false)
</body>
